<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_white">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        tools:context=".ui.order.AddAddressFragment">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/full_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/full_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/full_name"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mobile_no_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/full_name_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/mobile_no_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/mobile_number"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/select_state_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_rectangle_grey50_border_radius3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mobile_no_layout" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/flat_no_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_state_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/flat_no_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/flat_house_no_floor_building"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/colony_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/flat_no_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/colony_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/colony_street_locality"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/landmark_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/colony_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/landmark_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/landmark"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/landmark_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/city"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/pincode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city_layout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/pincode_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_grey50_border_radius3"
                android:fontFamily="@font/lato"
                android:hint="@string/pincode"
                android:paddingStart="12dp"
                android:paddingTop="11dp"
                android:paddingEnd="12dp"
                android:paddingBottom="11dp"
                android:textColor="#80000000"
                android:textSize="15sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorAppSecondary"
            android:fontFamily="@font/lato"
            android:padding="16dp"
            android:text="@string/save_address"
            android:textColor="@color/_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pincode_layout" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>